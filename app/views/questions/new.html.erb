<div class="login_box large_edit">
<%= form_for @question do |f| %>
  <% if @errors %>
    <ul>
      <% @errors.full_messages.each do |error| %>
      <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
  <h3>New Question</h3>
    <div class="form-group login_field row">
      <%= f.label :title %>
      <%= f.text_field :title, :class => "text_wide" %>
    </div>
    <div class="form-group login_field row">
      <%= f.label :body %>
      <%= f.text_area :body, :class => "text_box_wide" %>
    </div>
    <div id="create-question-btn" class="form-group sign_in_button">
      <%= f.submit %>
    </div>
  <% end %>
</div>
