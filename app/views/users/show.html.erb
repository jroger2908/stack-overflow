<head>
	<style>
		body {
			background-color: white;
		}
		h1 {
			color: maroon;
			margin-left: 40px;
		}
		div.question-container {
			position:relative;
			width: 80%;
			background-color: #D6E4FF;
			margin-bottom: 0.8em;
		}
		div.question {
			position:relative;
			display: inline-block;
			margin-top: 0.3em;
			margin-bottom: 0.3em;
		}

		div.arguments {
			font-size: 2em;
			border-right: solid;
		}

		div.arguments p{
			margin: auto;
			font-size: 0.6em;
			padding: 0.6em;
		}

		#content-box {
			position: relative;
			width: 45%;
			left: 5em;
			display: inline-block;
		}

		.profile-box {
			position: relative;
			width: 40%;
			left: 5em;
		}

		.profile-info {
			display: inline-block;
			padding: 1em;
		}


	</style>
</head>
<link rel="stylesheet" href="/css/application.css">

<div class="jumbotron profile-box">
	<div class="profile-info">
		<img src="http://www.havanacasaparticular.com/inc/ewbv61.asp?fn=%2Fuploads%2FLos%2DVan%2DVan%2Din%2DMiami%2Ejpg&width=600&height=0" alt="Mountain View" style="width:304px;height:228px">
	</div>
	<div class="profile-info">
		<h4>User Information</h4>
		<table>
			<tr>
				<td> Name </td>
				<td><%= @user.name %></td>
			</tr>
			<tr>
				<td> Location </td>
				<td><%= @user.location %> </td>
			</tr>
			<tr>
				<td> About me </td>
				<td><%=  %> </td>
			</tr>
		</table>
	</div>
</div>

<div id="content-box">
	<h1><%= link_to "Question:", user_questions_path(@user) %>
	<% @questions.each do |question| %></h1>
	<div class="question-container">
		<div class="question arguments">
			<p>Votes: <%= question.votes.count %></p>
		</div>
		<div class="question arguments">
			<p>Answers:<%= question.answers.count %> </p>
		</div>
		<div class="question diplay">
			<p><%= link_to question.title, question_path(question)  %></p>
		</div>
	</div>
	<% end %>
</div>

<div id="content-box">
	<h1><%= link_to "Answers:" %></h1>
	<% @answers.each do |answer| %>
	<div class="question-container">
		<div class="question arguments">
			<p>Votes: <%= answer.votes.count %></p>
		</div>
		<div class="question diplay">
			<p></p>
			<p><%= answer.body %></p>
		</div>
	</div>
	<% end %>
</div>
