<div class="login_box large_edit">
  <h3>Edit Answer</h3>
<%= form_for @answer, url: question_answer_path(@answer.question_id,@answer) do |f| %>
  <% if @errors %>
    <ul>
      <% @errors.full_messages.each do |error| %>
      <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group login_field">
    <%= f.text_area :body, :class => "text_box_wide" %>
  </div>
  <div class="form-group sign_in_button">
    <%= f.submit %>
  </div>
<% end %>
</div>
