<%= form_for @question do |f| %>
  <% if @errors %>
    <ul>
      <% @errors.full_messages.each do |error| %>
      <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div id="create-question-btn" class="form-group">
    <%= f.submit %>
  </div>
<% end %>